{
  "$schema": "https://schema.claudecode.com/mcp-servers.json",
  "mcpServers": {
    "claude-flow": {
      "command": "npx",
      "args": ["claude-flow@alpha", "mcp", "start"],
      "description": "SPARC methodology orchestration with swarm coordination for TDD workflows",
      "tags": ["orchestration", "sparc", "tdd", "coordination", "required"],
      "env": {
        "CLAUDE_FLOW_AUTO_HOOKS": "true",
        "CLAUDE_FLOW_SESSION_PERSIST": "true"
      }
    },
    "ruv-swarm": {
      "command": "npx",
      "args": ["ruv-swarm", "mcp", "start"],
      "description": "Enhanced swarm coordination with advanced agent patterns",
      "tags": ["orchestration", "swarm", "coordination", "optional"],
      "disabled": true
    },
    "flow-nexus": {
      "command": "npx",
      "args": ["flow-nexus@latest", "mcp", "start"],
      "description": "Cloud-based orchestration with 70+ tools for sandboxes, neural AI, and GitHub",
      "tags": ["cloud", "orchestration", "advanced", "optional"],
      "disabled": true,
      "requiresAuth": true
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/beengud/raibid-labs"],
      "description": "File system access for raibid-labs organization repositories",
      "tags": ["filesystem", "core", "recommended"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "description": "GitHub API integration for repository management and automation",
      "tags": ["github", "vcs", "recommended"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "description": "Git operations and repository management",
      "tags": ["git", "vcs", "recommended"]
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "description": "PostgreSQL database operations for AI/ML data pipelines",
      "tags": ["database", "postgres", "ai-ml", "optional"],
      "disabled": true,
      "env": {
        "POSTGRES_CONNECTION_STRING": "${DATABASE_URL}"
      }
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite"],
      "description": "SQLite database operations for local AI/ML experiments",
      "tags": ["database", "sqlite", "ai-ml", "optional"],
      "disabled": true
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "description": "Web search capabilities for research and documentation lookup",
      "tags": ["search", "research", "optional"],
      "disabled": true,
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "description": "Browser automation for web scraping and testing",
      "tags": ["automation", "testing", "optional"],
      "disabled": true
    },
    "rust-analyzer": {
      "command": "rust-analyzer",
      "args": ["--mcp"],
      "description": "Rust language server integration for Rust development",
      "tags": ["rust", "language-server", "development", "optional"],
      "disabled": true
    },
    "python-lsp": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-python-lsp"],
      "description": "Python language server for AI/ML development",
      "tags": ["python", "language-server", "ai-ml", "optional"],
      "disabled": true
    },
    "jupyter": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-jupyter"],
      "description": "Jupyter notebook integration for AI/ML experiments",
      "tags": ["jupyter", "ai-ml", "notebook", "optional"],
      "disabled": true
    },
    "docker": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-docker"],
      "description": "Docker container management for development and deployment",
      "tags": ["docker", "containers", "devops", "optional"],
      "disabled": true
    },
    "kubernetes": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-kubernetes"],
      "description": "Kubernetes cluster management for ML workload orchestration",
      "tags": ["kubernetes", "orchestration", "ml-ops", "optional"],
      "disabled": true,
      "env": {
        "KUBECONFIG": "${KUBECONFIG}"
      }
    },
    "prometheus": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-prometheus"],
      "description": "Prometheus metrics for ML model monitoring",
      "tags": ["monitoring", "metrics", "ml-ops", "optional"],
      "disabled": true,
      "env": {
        "PROMETHEUS_URL": "${PROMETHEUS_URL}"
      }
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "description": "Slack integration for team notifications and collaboration",
      "tags": ["collaboration", "notifications", "optional"],
      "disabled": true,
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      }
    },
    "aws": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-aws"],
      "description": "AWS services integration for cloud ML workloads",
      "tags": ["cloud", "aws", "ml-ops", "optional"],
      "disabled": true,
      "env": {
        "AWS_ACCESS_KEY_ID": "${AWS_ACCESS_KEY_ID}",
        "AWS_SECRET_ACCESS_KEY": "${AWS_SECRET_ACCESS_KEY}",
        "AWS_REGION": "${AWS_REGION}"
      }
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent memory for cross-session context and learning",
      "tags": ["memory", "persistence", "recommended"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Enhanced reasoning for complex problem solving",
      "tags": ["reasoning", "thinking", "optional"],
      "disabled": true
    }
  },
  "metadata": {
    "organization": "raibid-labs",
    "version": "1.0.0",
    "lastUpdated": "2025-11-12",
    "description": "Organization-wide MCP server configuration for raibid-labs AI/ML development",
    "categories": {
      "required": ["claude-flow"],
      "recommended": ["filesystem", "github", "git", "memory"],
      "ai-ml": ["postgres", "sqlite", "python-lsp", "jupyter", "kubernetes", "prometheus"],
      "development": ["rust-analyzer", "docker"],
      "optional": ["ruv-swarm", "flow-nexus", "brave-search", "puppeteer", "slack", "aws", "sequential-thinking"]
    }
  }
}
